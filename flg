#!/bin/zsh
#
#
#Set colors for the flag
#
green=$(tput setaf 82)  # Green
white=$(tput setaf 15)  # White
reset=$(tput sgr0)      # Reset the color
star=$(tput setaf 227) # Yellow for the star

cleanup(){
    tput rmcup
}
trap cleanup exit
tput smcup

# Flag Design: Left part is green (represented by 0) and right part is white (represented by 1)
FLAG="


       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------################################-##########################################
       --------------------------##############################--###########################################
       --------------------------##########################-----############################################
       --------------------------########################-----################-#############################
       --------------------------######################------################---############################
       --------------------------#####################+-----##################--------######################
       --------------------------###################-------#################--------########################
       --------------------------##################-------################-----------#######################
       --------------------------##################-------###################----------#####################
       --------------------------#################--------####################---###########################
       --------------------------#################--------####################--############################
       --------------------------#################--------##################################################
       --------------------------#################---------#################################################
       --------------------------#################----------################################################
       --------------------------#################-----------###############################################
       --------------------------##################-----------###########################-##################
       --------------------------##################-------------########################--##################
       --------------------------###################--------------###################----###################
       --------------------------#####################---------------#############------####################
       --------------------------######################-------------------------------######################
       --------------------------########################---------------------------########################
       --------------------------##########################-----------------------##########################
       --------------------------##############################---------------##############################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
       --------------------------###########################################################################
	



"

    
while true; do
    tput clear
    # Apply green color to the entire flag first
    f=$FLAG

    # Apply white color to the '-' characters (white color for white part)
    f=$(echo "$f" | sed "s/-/${white}-/g")

    # Apply green color to the '#' characters (green color for green part)
    f=$(echo "$f" | sed "s/#/${green}#/g")
    f=$(echo "$f" | sed "s/+/${green}+/g")



    # Apply reset at the end of each line to ensure proper formatting
    f=$(echo "$f" | sed "s/$/${reset}/")

    # Display the flag with colors
    echo "$f"
    sleep 1
done

tput sgr

